<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_dark_default_color_background"
    android:gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100">

        <com.example.common.view.blurview.ShapeBlurView
            android:id="@+id/sbvItemTemplateGenerateVideo2First"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_1"
            app:blur_corner_radius="@dimen/dp_16"
            app:blur_mode="rectangle"
            app:blur_radius="20dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnWork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Work"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>